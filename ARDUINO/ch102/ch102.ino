void setup() {
  pinMode(10, OUTPUT);  // D10 핀을 출력 모드로 설정

  // 타이머 1을 CTC 모드로 설정하고, 주기를 설정합니다.
  // OCR1A는 타이머 1의 비교 레지스터입니다.
  // 이 값에 따라 타이머 주기가 결정됩니다.

  // 타이머 1을 CTC 모드로 설정 (WGM13:0 = 0101)
  TCCR1A = 0;              // OC1B 출력은 타이머가 제어
  TCCR1B = (1 << WGM12) | (1 << CS10);  // CTC 모드, prescaler = 1
  OCR1A = 11;           // 12MHz 클럭에 맞춰 1초마다 반전, OCR1A = 11

  // 타이머 1의 비교 매칭 시 OC1B 핀을 반전시킴
  TCCR1A |= (1 << COM1B0);  // OC1B 핀에서 반전 출력 설정
}

